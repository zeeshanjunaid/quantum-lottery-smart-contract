# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml,md,toml,json}]
indent_style = space
indent_size = 2

[*.sol]
indent_style = tab
indent_size = 4
